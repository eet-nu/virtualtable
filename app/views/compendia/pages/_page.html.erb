<section class="section">
  <div class="container">
    <header class="level">
      <div class="level-left">
        <div class="level-item">
          <h1 class="title">
            <%= page.title %>
          </h1>
        </div>
        <div class="level-item">
          <%=
            link_to t('.edit_page'), edit_compendium_page_path(page.compendium, page),
              class: 'button is-small is-link is-outlined'
          %>
        </div>
      </div>
    </header>
    
    <div class="content">
      <%= render page.contents %>
    </div>
  </div>
</section>