<%
title    t('.page_title', page: @page.title)
subtitle @compendium.title
%>
<main class="content content--edit-page" role="main">
  <div class="wrapper">
    <div class="compendium-page">
      <%=
        render 'table_of_contents',
          compendium: @compendium,
          page:       @page,
          mode:       'edit'
      %>
      
      <div class="compendium-page__form">
        <%= render 'form', compendium: @compendium, page: @page %>
      </div>
    </div>
  </div>
</main>
