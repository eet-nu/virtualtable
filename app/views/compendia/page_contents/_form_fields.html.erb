<%
f = fields
containable = f.object
content     = containable.content
%>
<%= field_set_tag nil, data: { target: 'compendium--editor.content' } do %>
  <p>
    <%= link_to t('.move_up'),   '#', data: { action: 'click->compendium--editor#moveContent', direction: 'up'   } %>
    <%= link_to t('.move_down'), '#', data: { action: 'click->compendium--editor#moveContent', direction: 'down' } %>
  </p>
  <p>
    PageContent ID: <%= f.number_field :id %>
    Position: <%= f.number_field :position %>
    Destroy: <%= f.check_box :_destroy %>
    Content Type: <%= f.text_field :content_type %>
    Content Id: <%= f.number_field :content_id %>
  </p>
  <%= f.fields_for :content do |content_fields| %>
    <%= render "compendia/#{content.to_partial_path}_fields", fields: content_fields %>
  <% end %>
<% end %>
