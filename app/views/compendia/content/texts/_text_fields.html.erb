<%
f = fields
%>
<p>Text ID: <%= f.number_field :id %></p>

<%= f.field :title do %>
  <%= f.label      :title %>
  <%= f.text_field :title %>
  <%= f.errors     :title %>
<% end %>

<%= f.field :description do %>
  <%= f.label     :description %>
  <%= f.text_area :description %>
  <%= f.errors    :description %>
<% end %>