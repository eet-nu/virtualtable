<section class="compendia-overview">
  <header class="compendia-overview__header">
    <h2>
      <%= t '.compendia' %>
    </h2>
    
    <div class="compendia-overview__actions">
      <ul>
        <li>
          <%= link_to t('.create_new_compendium'), new_compendium_path, class: 'button' %>
        </li>
      </ul>
    </div>
  </header>
  
  <div class="compendia-overview__content">
    <% if compendia.present? %>
      <ul>
        <% compendia.each do |compendium| %>
          <li>
            <%= link_to compendium.title, compendium %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p><%= t '.no_compendia_available' %></p>
    <% end %>
  </div>
</section>
