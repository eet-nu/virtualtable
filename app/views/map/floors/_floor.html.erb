<%=
  content_tag(
    :div,
    class: 'map-floor',
    id:    dom_id(floor),
    data: {
      target:                         'map-editor.floor',
      controller:                     'map--floor',
      map__floor_title:               floor.title,
      map__floor_columns:             floor.columns,
      map__floor_rows:                floor.rows,
      map__floor_scale:               floor.scale,
      map__floor_scale_unit:          floor.scale_unit,
      map__floor_background_color:    floor.background_color,
      map__floor_grid:                floor.grid,
      map__floor_grid_type:           floor.grid_type,
      map__floor_grid_size:           floor.grid_size,
      map__floor_grid_color:          floor.grid_color,
      map__floor_grid_opacity:        floor.grid_opacity,
      map__floor_global_illumination: floor.global_illumination
    }
  ) do
%>
  <%= render partial: 'map/backgrounds/background', collection: floor.backgrounds %>
  <%= render partial: 'map/areas/area',             collection: floor.areas       %>
  <%= render partial: 'map/walls/wall',             collection: floor.walls       %>
  <%= render partial: 'map/doors/door',             collection: floor.doors       %>
  <%= render partial: 'map/characters/character',   collection: floor.characters  %>
<% end %>