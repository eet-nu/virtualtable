<main class="content" role="main">
  <div class="wrapper">
    <div class="section-block section-block--game">
      <header class="section-block__header">
        <h2>
          <%= @game.title %>
        </h2>
        
        <div class="section-block__actions">
          <%=
            link_to t('.join_session'), play_path(@game),
              class: 'button is-link is-outlined'
          %>
          
          <% if current_user == @game.author %>
            <%=
              link_to t('.destroy_game'), game_path,
                class: 'button is-danger',
                data:  {
                  method:  :delete,
                  confirm: t('.confirm_game_destruction')
                }
            %>
          <% end %>
        </div>
      </header>
      
      <div class="section-block__content">
        <%= @game.description_html %>
      </div>
    </div>
    
    <div class="section-block section-block--maps">
      <header class="section-block__header">
        <h2>
          <%= t '.maps' %>
        </h2>
      </header>
      
      <div class="section-block__content">
        <% if @maps.present? %>
          <ul>
            <% @maps.each do |map| %>
              <li><%= link_to map.title, map %></li>
            <% end %>
          </ul>
        <% else %>
          <p><%= t '.no_maps_available' %></p>
        <% end %>
      </div>
    </div>
  </div>
</main>
