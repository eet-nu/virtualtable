 <%= bulma_form_for user do |f| %>
  <%= f.field :name do %>
    <%= f.label      :name %>
    <%= f.text_field :name %>
    <%= f.errors     :name %>
  <% end %>
  
  <%= f.field :email do %>
    <%= f.label      :email %>
    <%= f.text_field :email %>
    <%= f.errors     :email %>
  <% end %>
  
  <%= f.field :password do %>
    <%= f.label          :password %>
    <%= f.password_field :password %>
    <%= f.errors         :password %>
  <% end %>
  
  <%= f.field :password_confirmation do %>
    <%= f.label          :password_confirmation %>
    <%= f.password_field :password_confirmation %>
    <%= f.errors         :password_confirmation %>
  <% end %>
  
  <%= f.submit_or_reset %>
<% end %>
